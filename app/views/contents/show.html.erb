<article>
  <hgroup>
    <h1>ID: <%= @content.id %></h1>
    <% if @content.parent %>
      <h3>in reply to: <%= link_to @content.parent.text, @content.parent %></h3>
    <% end %>
    <%= render partial: 'contents/tag_content' %>
  </hgroup>
  <p id="description"><%= @content.description %></p>
  <section>
    <h4>tags</h4>
    <p><%= @content.tag_list.each { |t| puts t + ', '} %></p>
  </section>
  <section id="replies">
    <h4><%= I18n.t('.replies') %></h4>
    <% if @content.children %>
      <%= render partial: 'contents/content', collection: @content.children %>
    <% else %>
      <p><%= I18n.t('.no_replies') %></p>
    <% end %>
    <footer>
      <%= render 'manage_content' %>
    </footer>
  </section>
</article>