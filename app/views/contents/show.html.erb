<article>
  <hgroup>
    <h1>ID: <%= @content.id %></h1>
    <%= form_for @content do |c| %>
      <div class="field">
        <%= c.label :tag_list, "Tags (separated by commas)" %>
        <%= c.text_field :tag_list %>
      </div>
      <div class="actions">
        <%= c.submit I18n.t('.submit'), id: 'submit'%>
      </div>
    <% end %>
    <% if @content.parent %>
      <h3>in reply to: <%= link_to @content.parent.text, @content.parent %></h3>
    <% end %>
  </hgroup>
  <p><%= @content.description %></p>
  <section id="replies">
    <h4><%= I18n.t('.replies') %></h4>
    <% if @content.children %>
      <%= render partial: 'contents/content', collection: @content.children %>
    <% else %>
      <p><%= I18n.t('.no_replies') %></p>
    <% end %>
    <footer>
      <%= render 'manage_content' %>
    </footer>
  </section>
</article>